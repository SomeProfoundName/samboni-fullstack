---
import Welcome from "./Welcome.astro";
import Store from "./Store.astro";
import CartProductCard from "./CartProductCard.astro";
---

<div class="drawer drawer-end">
  <input id="my-drawer-5" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <Welcome />
    <Store />
    <label for="my-drawer-5" class="drawer-button btn btn-primary">
      CART <span id="cart-count" class="badge badge-soft badge-info">0</span>
    </label>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-5" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <div class="bg-base-200 min-h-full w-1/2 p-4 flex flex-col">
      <h1 class="text-2xl font-bold">CART</h1>
      <hr class="my-4" />

      <div id="cart-items" class="flex-1 overflow-y-auto">
        <p class="text-center text-gray-500">Loading cart...</p>
        <!-- <CartProductCard /> -->
        <!-- <CartProductCard /> -->
      </div>
      <hr />
      <div id="cart-total" class="mt-4 mb-2 text-xl font-bold hidden">
        Total: <span id="total-amount">$0.00</span>
      </div>

      <a id="checkout-btn" href="#" class="btn btn-primary w-full hidden"
        >CHECKOUT</a
      >
    </div>
  </div>
</div>

<script src="../scripts/cart.ts"></script>
